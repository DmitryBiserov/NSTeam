<Window x:Class="NSTeam.wpfReport" x:Name="wpfReportMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSTeam"
             mc:Ignorable="d" d:DesignWidth="300" Height="445">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBoxReportMsg"
            Margin="10,23,10,22" Grid.Row="1" />
        <Button x:Name="BtnReportOk" Grid.Row="0" HorizontalAlignment="Left" Width="100" Content="Ok" FontSize="20" FontFamily="Century Gothic" IsDefault="True" IsCancel="True"></Button>
    </Grid>
</Window>
